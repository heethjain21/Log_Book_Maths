<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <declare-styleable name="myTheme">

        <!-- Accent color realted attributes -->
        <attr name="primaryColor" format="color"/>
        <attr name="primaryDarkColor" format="color"/>

        <!-- Background realted attributes -->
        <attr name ="backgroundColor" format="color"/>

        <!-- Font Related Attributes -->
        <attr name="textColor" format="color"/>
        <attr name="secondaryTextColor" format="color"/>
        <attr name="accentTextColor" format="color"/>

        <attr name="copyContentIcon" format="reference"/>

        <!-- Button realted attributes -->
        <attr name="tintColor" format="color"/>
        <attr name="buttonColor" format="color"/>

        <!-- Switch Compat Related Attributes -->
        <attr name="trackTintColor" format="color"/>
        <attr name="darkModeSwitch" format="boolean"/>
        <attr name="roundingSwitch" format="boolean"/>

        <!-- NavigationView highlight realted attributes -->
        <attr name="highlightColor" format="color"/>

        <!-- CardView realted attributes -->
        <attr name="cardBackgroundColor" format="color"/>

    </declare-styleable>
    
</resources>